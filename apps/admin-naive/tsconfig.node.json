{
  "extends": "@tsconfig/node20/tsconfig.json",
  "include": [
    "vite.config.ts",
    "vitest.config.ts",
    "typings/*.d.ts"
  ],
  "compilerOptions": {
    "composite": true,
    "noEmit": true,
    "allowJs": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "tsBuildInfoFile": "./node_module/.tmp/tsconfig.node.tsbuildinfo",
    "types": [
      "node",
      "vite/client",
      "vitest"
    ]
  }
}